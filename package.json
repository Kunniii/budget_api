{
  "name": "budget_api",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build --minify --target=bun --outfile=dist/index.js ./src/index.ts",
    "build:node": "bun build --minify --target=node --outfile=dist/index.js ./src/index.ts",
    "build:cli": "bun build --compile --outfile=dist/budget_api ./src/index.ts",
    "start": "bun ./dist/index.js",
    "dev": "bun --watch ./src/index.ts"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "prisma": "^5.11.0",
    "@prisma/client": "^5.11.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.2.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6"
  }
}
